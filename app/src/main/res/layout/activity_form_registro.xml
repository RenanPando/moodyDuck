<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ciano"
        tools:context=".FormRegistro">

        <Button
            android:id="@+id/bVoltar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_ontem"
            app:backgroundTint="@color/amalero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/qckbold"
            android:text="O que você tem feito?"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewSocial"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/tituloSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Social"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewSocial"
            app:layout_constraintTop_toTopOf="@+id/viewSocial" />

        <View
            android:id="@+id/viewPassatempo"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSocial" />

        <TextView
            android:id="@+id/tituloPassatempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Passatempo"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewPassatempo"
            app:layout_constraintTop_toTopOf="@+id/viewPassatempo" />

        <View
            android:id="@+id/viewSono"

            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPassatempo" />

        <TextView
            android:id="@+id/tituloSono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Sono"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewSono"
            app:layout_constraintTop_toTopOf="@+id/viewSono" />

        <View
            android:id="@+id/viewAlimentacao"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSono" />

        <TextView
            android:id="@+id/tituloAlimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Alimentação"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewAlimentacao"
            app:layout_constraintTop_toTopOf="@+id/viewAlimentacao" />

        <View
            android:id="@+id/viewSaude"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewAlimentacao" />

        <TextView
            android:id="@+id/tituloSaude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Saúde"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewSaude"
            app:layout_constraintTop_toTopOf="@+id/viewSaude" />

        <View
            android:id="@+id/viewTarefas"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/boxregistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewSaude" />

        <TextView
            android:id="@+id/tituloTarefas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/qckbold"
            android:text="Tarefas"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/viewTarefas"
            app:layout_constraintTop_toTopOf="@+id/viewTarefas" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardObjetivos"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#b4d9d5"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="15dp"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloObjetivos">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tituloObjetivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/qckbold"
            android:text="Objetivos"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cardObjetivos"
            app:layout_constraintTop_toBottomOf="@+id/viewTarefas" />

        <TextView
            android:id="@+id/tituloAnotacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/qckbold"
            android:text="Anotações"
            android:textColor="@color/amalero"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/campoNotas"
            app:layout_constraintTop_toBottomOf="@+id/cardObjetivos" />

        <ImageButton
            android:id="@+id/bSalvar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="120dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_salvar"
            android:onClick="salvarRegistro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campoNotas" />

        <EditText
            android:id="@+id/campoNotas"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boxnotes"
            android:ems="10"
            android:fontFamily="@font/qckbold"
            android:hint="Adicionar nota"
            android:inputType="textPersonName"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:textColor="#70B2AA"
            android:textColorHint="#70B2AA"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloAnotacoes" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/qckbold"
            android:text="Salvar"
            android:textColor="@color/amalero"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/bSalvar"
            app:layout_constraintStart_toStartOf="@+id/bSalvar"
            app:layout_constraintTop_toBottomOf="@+id/bSalvar" />

        <ToggleButton
            android:id="@+id/toggleFamilia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/togglefamilia"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewSocial"
            app:layout_constraintEnd_toStartOf="@+id/toggleAmigos"
            app:layout_constraintTop_toBottomOf="@+id/tituloSocial" />

        <ToggleButton
            android:id="@+id/toggleAmigos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/toggleamigos"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewSocial"
            app:layout_constraintEnd_toEndOf="@+id/viewSocial"
            app:layout_constraintStart_toStartOf="@+id/viewSocial"
            app:layout_constraintTop_toBottomOf="@+id/tituloSocial" />

        <ToggleButton
            android:id="@+id/toggleEncontro"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/toggleencontro"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewSocial"
            app:layout_constraintStart_toEndOf="@id/toggleAmigos"
            app:layout_constraintTop_toBottomOf="@+id/tituloSocial" />

        <ToggleButton
            android:id="@+id/toggleLivros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="115dp"
            android:background="@drawable/togglelivros"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewPassatempo"
            app:layout_constraintStart_toStartOf="@+id/viewPassatempo"
            app:layout_constraintTop_toBottomOf="@+id/tituloPassatempo" />

        <ToggleButton
            android:id="@+id/toggleFilmes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/togglefilmes"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewPassatempo"
            app:layout_constraintEnd_toStartOf="@+id/toggleLivros"
            app:layout_constraintTop_toBottomOf="@+id/tituloPassatempo" />

        <ToggleButton
            android:id="@+id/toggleDescanso"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="115dp"
            android:background="@drawable/toggledescanso"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewPassatempo"
            app:layout_constraintEnd_toEndOf="@+id/viewPassatempo"
            app:layout_constraintTop_toBottomOf="@+id/tituloPassatempo" />

        <ToggleButton
            android:id="@+id/toggleFestas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/togglefestas"
            android:text="ToggleButton"
            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toBottomOf="@+id/viewPassatempo"
            app:layout_constraintStart_toEndOf="@+id/toggleDescanso"
            app:layout_constraintTop_toBottomOf="@+id/tituloPassatempo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>