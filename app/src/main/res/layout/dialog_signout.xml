<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txtPopup"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/qckbold"
            android:gravity="center"
            android:text="Deseja desconectar da sua conta? Será preciso iniciar a sessão novamente"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/bDescartar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bDescartar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/boxdialog"
            android:fontFamily="@font/qckbold"
            android:paddingHorizontal="30dp"
            android:text="SIM"
            android:textColor="@color/white"
            app:backgroundTint="@color/cianoescuro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtPopup"
            app:layout_constraintTop_toBottomOf="@+id/txtPopup" />

        <Button
            android:id="@+id/bNaoDescartar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:background="@drawable/boxdialog"
            android:fontFamily="@font/qckbold"
            android:paddingHorizontal="30dp"
            android:text="NÃO"
            android:textColor="@color/white"
            app:backgroundTint="@color/cianoescuro"
            app:layout_constraintBaseline_toBaselineOf="@+id/bDescartar"
            app:layout_constraintStart_toStartOf="@+id/txtPopup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>