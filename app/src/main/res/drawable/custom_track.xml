<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="#00FFFFFF" />
            <stroke android:color="#1D6259" android:width="5dp"/>
            <size android:height="30dp" android:width="50dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <solid android:color="#00FFFFFF" />
            <padding android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp"/>
            <stroke android:color="@color/amalero" android:width="5dp"/>
            <size android:height="40dp" android:width="60dp" />
        </shape>
    </item>
</selector>